{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "sourceMap": true,
    "rootDir": "src/ts",
    "outDir": "build",
    "removeComments": true,
    "noImplicitAny": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
  },
  "exclude": [
    "node_modules",
    "out",
    "src/tests"
  ]
}